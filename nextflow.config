
// base defaults
params.input  = "/home/students/mdb2024s32/Final_exam/Predicting_Fatty_Liver_Disease_Risk_Score.tsv"

// defaults
params.outdir = "./"
params.max_cpus        = 1
params.max_memory      = 4.GB

// profiles parameters
profiles {
	helicon {
        singularity.enabled    = true
        singularity.autoMounts = true
		process {
			executor = 'slurm'
			queue    = 'short'
			withName: RANDOM_FOREST {
				memory = 10.GB
				time   = 45.m
				cpus = 1
			}
			withName: K_NEAREST_NEIGHBOURS {
				memory = 8.GB
				time   = 15.m
				cpus   = 1
			}
                        withName: LINEAR_REGRESSION {
                                memory = 5.GB
				time   = 15.m
				cpus   = 1
                        }
}
			
		params.max_cpus        = 4
		params.max_memory      = 16.GB
	}
	desktop {
        docker.enabled         = true
        docker.userEmulation   = true
		process.executor       = 'local'
		params.max_cpus        = 1
		params.max_memory      = 4.GB
	}
	arm {
        docker.runOptions      = '-u $(id -u):$(id -g) --platform=linux/amd64'
    }
}